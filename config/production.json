{
  "HAProxy": {
    "BeforeReload": "iptables -w -I INPUT -p tcp -m multiport --dport 80,443,1024:5000,5100:6000,6100:10000,20000:31000 --syn -j DROP",
    "ReloadCommand": "haproxy -f /etc/haproxy/haproxy.cfg -p /var/run/haproxy.pid -D -sf $(cat /var/run/haproxy.pid)",
    "AfterReload": "iptables -w -D INPUT -p tcp -m multiport --dport 80,443,1024:5000,5100:6000,6100:10000,20000:31000 --syn -j DROP",
    "ReloadValidationCommand": "haproxy -c -f /etc/haproxy/haproxy.cfg"
  }
}
