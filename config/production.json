{
  "HAProxy": {
    "BeforeReload": "iptables -w -I INPUT -p tcp -m multiport --dport 80,443,1025:4999,5101:5999,7000:9999,20001:30999 --syn -j DROP",
    "ReloadCommand": "haproxy -f /etc/haproxy/haproxy.cfg -p /var/run/haproxy.pid -D -sf $(cat /var/run/haproxy.pid)",
    "AfterReload": "iptables -w -D INPUT -p tcp -m multiport --dport 80,443,1025:4999,5101:5999,7000:9999,20001:30999 --syn -j DROP",
    "ReloadValidationCommand": "haproxy -c -f /etc/haproxy/haproxy.cfg"
  }
}
